---
import Layout from "../layouts/Layout.astro"
---

<Layout>
	<h3 class="text-center">Tablas</h3>
    <div class="container text-center" id="seleccionaTabla">
        <a href="" class="btn btn-danger">
            Tabla del 1
        </a>
    </div>
    <div class="container py-5 text-center">
        <h3 id="tabla">Seleccione un numero </h3>
       
       <div id="creartabla">
        <h4>1 x 1 = 1</h4>
       </div>
       

    </div>
</Layout>
<script>
    // alert ("Hola esto es javascript"); Esto muestra una ventana

import { createReference } from "astro/content/runtime";

    // console.log ("Esto es js"); Esto lo muestra por la consola
    const seleccionaTablaEl=document.querySelector("#seleccionaTabla");

    const tablaEl=document.querySelector("#tabla");

    const creartablaEl=document.querySelector("#creartabla");
    // Cargador
    document.addEventListener("DOMContentLoaded",()=>{
        seleccionaTabla();
    });
    // Funciones
    function seleccionaTabla(){
        //Inyectar
        let valor = "";
        for (let n=1; n<=10; n++){
            valor+=`<a href="#" class="btn btn-danger m-2" id="${n}">
                        Tabla del ${n}
                    </a>
                    `
        }
        // console.log(valor);
        seleccionaTablaEl.innerHTML=valor
    }
    seleccionaTablaEl.addEventListener("click",(e)=>{
       tablaEl.innerHTML=`Tabla del ${e.target.id}`

       muestratabla(e.target.id);
    });

    function muestratabla(t){

            let valor="";
            for(let i=1; i<=1000;i++){    

                valor +=`
                
                <h4> ${t} x ${i}= ${t*i} </h4>

                `


            }
            creartablaEl.innerHTML = valor;

    }

</script>